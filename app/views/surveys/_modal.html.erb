<header class="modal__header">
  <h2 class="modal__title"><%= action_name %></h2>
  <button class="modal__close cursor-pointer hover:bg-gray-100" data-action="modal#closeModal">
    <svg class="fill-current text-gray-500" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
      <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
    </svg>
  </button>
</header>

<section class="modal__body max-w-screen-md">
  <%= turbo_frame_tag "form" do %>
    <turbo-stream target="form" action="replace">
      <template>
        <%= render partial: "form", locals: { survey: } %>
      </template>
    </turbo-stream>
  <% end %>
</section>
