<%= turbo_frame_tag "form" do %>
  <%= form_with(model: survey, class: "form", data: { turbo_frame: "_top" }) do |form| %>
    <div class="w-full pt-4">
      <div class="form__row">
        <div class="form__control w-6/12 relative">
          <%= form.label :first_name, "Imię", class: "form__label" %>
          <%= form.text_field :first_name, class: "form__input" %>
        </div>
        <div class="form__control w-6/12 relative">
          <%= form.label :last_name, "Nazwisko", class: "form__label" %>
          <%= form.text_field :last_name, class: "form__input" %>
        </div>
      </div>

      <div class="form__row">
        <div class="form__control w-6/12 relative">
          <%= form.label :age, "Wiek (L)", class: "form__label" %>
          <%= form.number_field :age, class: "form__input" %>
        </div>
        <div class="form__control w-6/12 relative">
          <%= form.label :height, "Wzrost (CM)", class: "form__label" %>
          <%= form.number_field :height, class: "form__input" %>
        </div>
      </div>

      <div class="form__row">
        <div class="form__control w-6/12 relative">
          <%= form.label :gender, "Płeć", class: "form__label" %>
          <%= form.select :gender, Survey.genders.keys.map { [t("survey.genders.#{it}"), it] }, {}, class: "form__input" %>
        </div>
        <div class="form__control w-6/12 relative" data-controller="color-picker">
          <div class="flex justify-between items-start">
            <%= form.label :favorite_color, "Ulubiony kolor", class: "form__label" %>
            <button type="button" class="text-xs text-green-600 cursor-pointer hover:underline" data-action="color-picker#setColor">losuj kolor</button>
          </div>
          <%= form.text_field :favorite_color, class: "form__input" %>
        </div>
      </div>

      <div class="flex justify-end items-center flex-wrap gap-2 mt-6">
        <%= button_tag "Anuluj", type: :button, class: "py-2 px-4 inline-flex items-center gap-x-2 text-xs font-medium rounded border border-transparent bg-gray-100 text-gray-800 cursor-pointer hover:bg-gray-200", data: { action: "modal#closeModal" } %>
        <%= form.submit "Zapisz", class: "py-2 px-4 inline-flex items-center gap-x-2 text-xs font-medium rounded border border-transparent bg-blue-100 text-blue-800 cursor-pointer hover:bg-blue-200" %>
      </div>
    </div>
  <% end %>
<% end %>
